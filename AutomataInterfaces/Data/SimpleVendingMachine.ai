Def: Vending_Machine
	Var: CashType = {0, 10, 20, 50};
		GoodsKind = {null, Beer, Drink}
		CashType Money;
		GoodsKind Selectgoods;
		GoodsKind DeliverGoods;
	Location:
	{ 	
		s0:( true => ( ( Money = 0 ) && ( Selectgoods = null ) ) )|[0,1];
		s1:( ( Money >= 10 ) => ( ( Selectgoods = null ) && ( DeliverGoods = null ) ) )|[0,1];
		s2:( (Selectgoods = Beer) => ( DeliverGoods = Beer) )|[1,2];
		s3:( (Selectgoods = Beer) => ( DeliverGoods = Beer) )|[1,2];
	}

	Input: 
	{
		Money;
		Selectgoods;
	}

	Output: 
	{
		DeliverGoods; 
	}
	q0:
	{
		s1:(true => ( display = idle ) )|[0,1];
	}
	Transition: 
	{
		t0:s0-->s1,( Money = 0 );
		t2:s1-->s2,( usage != 0 );
		t3:s2-->s3,( usage != 0 );
		t4:s2-->s1,( usage = 0 );
		t5:s3-->s1,( usage = 0 );
		t6:s3-->s3,( usage != 0 );
	}

Def: Clients
	Var: CashType = {10,20,50};
		GoodsKind = {Beer, Drink}
		CashType Money;
		GoodsKind Selectgoods;
		GoodsKind DeliverGoods;

	Location:
	{
		p0:( ( usage = 1 ) => ( display = idle ) )|[0,1];
		p1:( ( usage = 1 ) => ( display = current_position ) )|[0,1];
		p2:( ( ( legaldestination = true ) && ( usage = 0 ) ) => ( display = route_to_destination ) )|[0,3];
	}

	Input: 
	{
		Money;
		Selectgoods;
	}

	Output: 
	{
		DeliverGoods; 
	}

	q0:
	{
		r1:( ( usage = 1 ) => ( display = idle ) )|[0,1];
	}

	Transition:
	{
		t1:r1-->r2,( usage != 0 );
		t2:r2-->r3,( usage != 0 );
		t3:r3-->r1,( usage = 0 );
	}


